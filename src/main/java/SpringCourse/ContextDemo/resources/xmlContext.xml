    <bean id="company" class="SpringCourse.ContextDemo.POJO.Company">
        <property name="employee" ref="employee"/>
        <property name="address" ref="address"/>
    </bean>

    <bean id="employee" class="SpringCourse.ContextDemo.POJO.Employee">
    <constructor-arg type="java.lang.String" value="Alex"/>
    <constructor-arg type="int" value="30"/>
    <constructor-arg type="java.lang.String" value="Germany"/>
    </bean>

    <bean id="address" class="SpringCourse.ContextDemo.POJO.Address"/>
    <bean id="listClass1" class="SpringCourse.ContextDemo.POJO.ListDefinition.ListClass1"/>
    <bean id="listClass2" class="SpringCourse.ContextDemo.POJO.ListDefinition.ListClass2"/>

    <bean id="myXmlList"
          class="SpringCourse.ContextDemo.POJO.ListDefinition.MyXmlList">
        <property name="myList">
            <list value-type="SpringCourse.ContextDemo.POJO.ListDefinition.ListClasses">
                <ref bean="listClass1"/>
                <ref bean="listClass2"/>
            </list>
        </property>
    </bean>
</beans>